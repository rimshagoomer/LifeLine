<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView4"
    android:layout_above="@+id/passwordT"
    android:layout_alignEnd="@+id/loginTV"
    android:fillViewport="true">


    <RelativeLayout  android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity"
        android:orientation="vertical"
        android:clickable="false"
        android:isScrollContainer="false">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/imageView2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/phoneT"
            android:hint="Phone number"
            android:layout_marginTop="20dp"
            android:layout_below="@id/imageView2"
            android:gravity="center_horizontal"
            android:layout_alignEnd="@+id/passwordT" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:id="@+id/passwordT"
            android:layout_alignParentStart="true"
            android:hint="Password"
            android:gravity="center_horizontal"
            android:layout_below="@+id/phoneT" />



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/loginB"
            android:background="@drawable/booknow"
            android:layout_marginTop="57dp"
            android:onClick="onLoginClick"
            android:clickable="true"
            android:layout_below="@+id/passwordT"
            android:layout_centerHorizontal="true"
            android:textSize="20dip"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/register"
            android:id="@+id/SignupT"
            android:onClick="onSignupClick"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/loginB"
            android:textSize="17dip"
            android:textStyle="italic"
            android:textColor="#0a88cc" />


    </RelativeLayout>
</ScrollView>
